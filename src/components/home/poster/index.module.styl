.poster-top
        display flex
        padding 0.2rem
        background #fff

        & > div
                flex-grow 1

                a
                        display inline-block
                        height 100%
                        width 100%

                        img
                                width 100%
                                height 100%

        .left
                display flex
                flex-direction column
                justify-content space-between
                margin-right 0.1rem

        .right
                margin-left 0.1rem

                div
                        overflow hidden
                        border-radius 0.2rem
                        border 0.01rem solid rgba(0, 0, 0, 0.2)

.poster-bottom
        display flex
        justify-content space-between
        padding 0.2rem
        background #fff

        & > div
                width 48.5%

                & > div
                        margin-bottom 0.1rem

                        a
                                display inline-block
                                width 100%

                                img
                                        width 100%