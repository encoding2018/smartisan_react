.content
        display block
        margin-bottom 0.2rem
        background #fff
.content1
        display flex
        padding 0.2rem 0.2rem 0

        li
                a
                        display inline-block
                        width 2.5rem
                        margin-right 0.2rem

                & .img-box
                        width 2.5rem
                        height 2.5rem
                        border 0.01rem solid rgba(0, 0, 0, 0.1)
                        border-radius 0.1rem
                        margin-bottom 0.1rem
                        img
                                width 100%

                & .text-box
                        width 100%
                        padding 0 0.2rem

.content2
        display flex
        flex-wrap wrap
        padding 0.2rem 0.2rem
        justify-content space-between

        li
                width 48.5%
                margin-top  0.2rem

                .img-box
                        div
                                padding-top 100%
                                position relative
                                border 0.01rem solid rgba(100,100,100,0.15)
                                border-radius 0.15rem
                                img
                                        position absolute
                                        top 50%
                                        left 50%
                                        transform translateX(-50%) translateY(-50%)
                                        width 80%

                .text-box
                        margin-top 0.1rem
                        padding 0 0.2rem
.content3
        li
                padding 0.1rem 0.1rem 0.1rem 0.3rem
                border-bottom 0.01rem solid rgba(0, 0, 0, 0.1)

                a
                        display flex
                        justify-content space-between

                        .img-box
                                width 35%
                                text-align center
                                div
                                        padding-top 100%
                                        position relative
                                        img
                                                position absolute
                                                top 50%
                                                left 50%
                                                transform translateX(-50%) translateY(-50%)
                                                width 95%

                        .text-box
                                width 55%
                                display flex
                                align-items center