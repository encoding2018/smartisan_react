.menu
        height 100%
        display flex
        background #000000
        background-image linear-gradient(#1d1d1d, #181818)

        & > *
                height 100%

        .center
                flex-grow 1

        .left,.right
                flex-shrink 0
                width 1rem

        & > li > div
                height 100%
                background-repeat no-repeat
.menu-btn
        background-size 1rem
        background-position top center
        background-image url("./img/nav-menu.png")
.back-btn
        background null
        display flex
        justify-content center
        align-items center

        & > div
                height 50%
                width 80%
                display flex
                align-items center
                justify-content space-between
                background linear-gradient(#2a2a29, #151515)
                box-shadow inset 0 1px 1px hsla(0, 0%, 100%, .1), inset 0 0 1px rgba(0, 0, 0, .5)
                padding 0.1rem 0.05rem
                color #fff
                text-align center

.logo
        background-position top center
        background-size 1rem
        background-image url("./img/nav-logo.png");
.search
        background-image url("./img/nav-search.png");
        background-size 45%
        background-position center
.edit
        background null
        display flex
        justify-content center
        align-items center

        & > div
                height 50%
                width 80%
                background linear-gradient(#2a2a29, #151515)
                box-shadow inset 0 1px 1px hsla(0, 0%, 100%, .1), inset 0 0 1px rgba(0, 0, 0, .5)
                padding 0.1rem 0.05rem
                text-align center
                color #fff

.text
        font-size 0.36rem
        font-weight 700
        color rgb(255, 255, 255)
        text-align center
        line-height 1rem
