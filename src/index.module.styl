 .wrapper
        height 100%
        width 100%
        display flex
        flex-direction column
        &>*
                width 100%

        .header
                height 1rem
                flex-shrink 0
        .content
                flex-grow 1
                overflow hidden
                background rgb(228,228,228)
        .content>*>*>*
                margin-bottom 0.2rem
                background #fff
        .footer
                height 1rem
                flex-shrink 0