.scrollContent
        touch-action pan-y
        height 100%
        overflow hidden
        .subContent
                touch-action pan-y
.banner
        width 100%
        background #fff
        margin-bottom 0.2rem

        .bannerContent
                overflow hidden
                touch-action pan-x
                position relative
                .imgBox
                        width 300%
                        display flex
                        li
                                flex-grow 1
                                flex-shrink 0
                                flex-basis 0
                                padding 0.2rem
                                img
                                        width 100%

                .indexBox
                        width 100%
                        height 0.2rem
                        position absolute
                        bottom 0.4rem
                        display flex
                        justify-content center

                        li
                                height 0.12rem
                                width 0.12rem
                                border-radius 50%
                                background-color rgba(0, 0, 0, 0.1)
                                margin 0 0.05rem
                                box-shadow 0 0 5px 2px rgba(0, 0, 0, 0.1)

                        .active
                                background-color rgb(255, 255, 255)

        .banner-menu
                padding-bottom 0.2rem
                ul
                        display flex
                        justify-content space-between
                        padding 0.2rem

                        li
                                flex 1 0 0

                                a
                                        display flex
                                        flex-direction column
                                        align-items center

                                        div
                                                width 30%
                                                height 30%
                                                background-repeat no-repeat
                                                background-position center
                                                margin-bottom 0.2rem
                                                img
                                                        width 100%
                                        span
                                                color rgb(127,127,127)
                                                font-size 0.2rem