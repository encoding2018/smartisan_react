.subContent
        height 100%
        padding 0.3rem
        .input-box
                input
                        outline none
                        padding 0 0.2rem
                        height 1rem
                        flex-grow 1
                        border-radius 0.15rem
                        font-size 0.3rem
                        border .01rem solid rgba(0,0,0,.2)
                input::-webkit-input-placeholder
                              font-size 0.3rem
                              color rgba(100,100,100,0.5)
                .floor
                        display flex
                        margin-bottom 0.2rem
                        .get-msg-code
                                width 2.5rem
                                margin-left 0.2rem
                                flex-shrink 0
                                text-align center
                                line-height 1rem
                                color rgba(0,0,0,0.8)
                                font-size 0.3rem
                                background #fff
                                border-radius 0.15rem
                                svg
                                        width 100%
                                        height 100%
                        .de-active
                                color rgba(100,100,100,0.5)
        .btn
                width 100%
                height 1rem
                background linear-gradient(#6f94e8,#5178df)
                border-radius 0.1rem
                opacity 0.6
                text-align center
                line-height 1rem
                font-weight 700
                color #fff
                font-size 0.3rem
        .active
                opacity 1