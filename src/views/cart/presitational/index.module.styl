.subContent
        display flex
        flex-direction column
        height 100%

        .floor1
                position fixed
                top 1rem
                z-index 2
                width 100%
                display flex
                align-items center
                padding 0.4rem
                background rgb(255, 231, 229)
                box-shadow inset 0 5px 13px rgba(0, 0, 0, .12), 0 5px 13px rgba(0, 0, 0, .12)

                .img-box
                        width 0.5rem
                        height 0.5rem
                        margin-right 0.3rem
                        background-image url("./img/icon_discount.png")
                        background-size 100%

                .text-box
                        font-size 0.3rem
                        color #d04f48
                        font-weight 700
                        flex-grow 1


        .product-box
                flex-grow 1
                background #fff
                overflow-y scroll
                touch-action pan-y
                &::-webkit-scrollbar
                        display none
                .placeholderTop, .placeholderBottom
                        width 100%
                        color #fff
                        margin-bottom 0.2rem

                .placeholderTop
                        height 1.3rem

                .placeholderBottom
                        height 1rem

                .product-bar
                        display flex
                        align-items center
                        padding 0.2rem 0.3rem
                        border-bottom 0.01rem solid rgb(240, 240, 240, 0.1)

                        .check-box
                                width 10%
                                &>span
                                        display flex
                                        justify-content center
                                        align-items center
                                        width 0.4rem
                                        height 0.4rem
                                        border-radius 50%
                                        overflow hidden
                                        border 0.02rem solid rgba(0, 0, 0, 0.2)
                                        margin-right 0.2rem
                                        span
                                                width 100%
                                                height 100%
                                                background-size 100%
                                                background-image url("./img/icon_check.png")

                        .product-avatar
                                width 30%
                                flex-shrink 0
                                margin-right 0.3rem

                                img
                                        width 100%

                        .product-type
                                flex-grow 1
                                padding-right 0.3rem

                                .show-name
                                        margin-bottom 0.1rem

                                        .name
                                                font-size 0.24rem
                                                font-weight 700
                                                color #000000
                                                white-space nowrap
                                                overflow hidden
                                                text-overflow ellipsis
                                                margin-bottom 0.05rem

                                        .type
                                                font-size 0.22rem
                                                font-weight 500
                                                white-space nowrap
                                                overflow hidden
                                                text-overflow ellipsis
                                                color #666


                                .show-type
                                        display flex
                                        align-items center
                                        margin-bottom 0.1rem

                                        .num-box
                                                display flex
                                                align-items center
                                                flex-grow 1

                                                input
                                                        width 0.6rem
                                                        height 0.6rem
                                                        border none
                                                        background-repeat no-repeat
                                                        background-size 100%
                                                        outline none
                                                .reduce,.add
                                                        width 0.5rem
                                                        height 0.5rem
                                                        background-size 100%
                                                .reduce
                                                        margin-right 0.2rem
                                                        background-image url("./img/icon-reduce.png")

                                                .num
                                                        margin 0 0.1rem
                                                        font-size 0.3rem

                                                .add
                                                        margin-left 0.2rem
                                                        background-image url("./img/icon-add.png")

                                        .price
                                                color rgb(212, 77, 68)
                                                font-weight 700
                                                font-size 0.24rem
                                                flex-shrink 0

                                                span:first-child
                                                        font-size 0.2rem

                                        .num
                                                font-size 0.24rem
                                                font-weight 700
                                                color rgb(153, 153, 153)

        .menu
                position fixed
                width 100%
                height 1rem
                bottom 0.98rem
                background #fff
                box-shadow 0 -0.1rem 0.2rem rgba(150, 150, 150, 0.2)
                padding 0 0.3rem
                display flex
                align-items center

                .check-box
                        flex-shrink 0
                        display flex
                        align-items center
                        padding-right 0.2rem

                        .check
                                height 0.4rem
                                width 0.4rem
                                display flex
                                border 0.02rem solid rgba(0, 0, 0, 0.2)
                                border-radius 100%
                                justify-content center
                                align-items center
                                margin-right 0.2rem
                                span
                                        width 100%
                                        height 100%
                                        background-size 100%
                                        background-repeat no-repeat
                                        background-image url("./img/icon_check.png")

                        span:last-child
                                font-weight 700
                                color rgb(153, 153, 153)
                                font-size 0.26rem

                                span
                                        margin-right 0.05rem

                .price
                        flex-grow 1
                        flex-basis 0

                        .total
                                margin-bottom 0.1rem

                                & > span:first-child
                                        font-weight 700
                                        color #666

                                & > span:last-child
                                        color rgb(212, 77, 68)
                                        font-weight 700

                        div:last-child
                                color rgb(212, 77, 68)

                .pay-btn
                        height 100%
                        flex-grow 1
                        flex-basis 0
                        padding 0.1rem 0.1rem

                        .btn
                                height 0.8rem
                                opacity 0.6
                                border-radius 0.15rem
                                color #ffffff
                                font-weight 700
                                font-size 0.3rem
                                line-height 0.8rem
                                text-align center
                        .pay
                                background-image linear-gradient(#6e98f4,#4b77ee)
                        .remove
                                background-image linear-gradient(#db6962,#d0453d)
                        .active
                                opacity 1


        .nullCart
                position fixed
                top 50%
                left 50%
                transform translateX(-50%) translateY(-50%)
                text-align center

                & > *
                        margin-bottom 0.1rem
                div
                        background-image url("./img/icon_null_cart.png")
                        background-size 60%
                        background-position center
                        background-repeat no-repeat
                        width 100%
                        padding-top 100%
                p
                        white-space nowrap
                        color rgb(202, 202, 202)

                p:nth-child(2)
                        font-size 0.5rem

                p:nth-child(3)
                        font-size 0.28rem
                        margin-bottom 0.3rem

                p:nth-child(4)
                        height 0.8rem
                        display flex
                        justify-content space-between

                        & > a
                                flex-grow 1
                                margin 0 0.1rem
                                padding 0.2rem 0.5rem
                                font-weight 700
                                border-radius 0.1rem
                                border 1px solid rgba(0, 0, 0, 0.2)
                                flex-basis 0
                                flex-shrink 0

                        .login-btn
                                background linear-gradient(#6f94e8,#5178df)
                                color #fff
                                font-size 0.3rem
                        a:last-child
                                display inline-block
                                font-size 0.28rem
                                color #666
        .edit
                position fixed
                top 0.5rem
                right 0.2rem
                transform translateY(-50%)
                height: 0.5rem;
                width: 0.8rem;
                background: linear-gradient(#2a2a29,#151515);
                box-shadow: inset 0 1px 1px hsla(0,0%,100%,.1), inset 0 0 1px rgba(0,0,0,.5);
                padding: .1rem .05rem;
                text-align: center;
                color: #fff;