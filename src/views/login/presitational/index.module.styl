.sub-content
        width 100%
        height 100%
        padding 0.3rem
        .input-box
                display flex
                flex-direction column
                border-radius 0.15rem
                overflow hidden
                input:first-child
                        border-bottom 0.01rem solid rgba(100,100,100,0.1)
                input
                        outline none
                        padding 0 0.2rem
                        height 1rem
                        border 0
                        font-size 0.3rem
                input::-webkit-input-placeholder
                        font-size 0.3rem
                        color rgba(100,100,100,0.5)
        .menu-box
                display flex
                justify-content space-between
                padding 0.2rem

                .auto-login
                        display flex
                        font-size 0.26rem

                        span:first-child
                                height 0.35rem
                                width 0.35rem
                                display flex
                                border 0.02rem solid rgba(0, 0, 0, 0.2)
                                border-radius 100%
                                justify-content center
                                align-items center
                                margin-right 0.2rem

                                img
                                        width 100%
                                        content url("../icon_check.png")

                        span:last-child
                                color rgb(127, 127, 127)

                .sign-up
                        display flex
                        align-items center
                        justify-content center

                        span
                                color rgb(127, 127, 127)
                                margin-left 0.2rem
        .button
                width 100%
                height 1rem
                background linear-gradient(#6f94e8,#5178df)
                opacity 0.6
                border-radius 0.1rem
                text-align center
                line-height 1rem
                font-weight 700
                color #fff
                font-size 0.3rem
        .active
                opacity 1

