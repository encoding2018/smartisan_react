.subContent
        background rgb(228, 228, 228)

        .siteBar
                padding 0.2rem 0.4rem
                background #fff
                display flex

                .left
                        flex-grow 1

                        .top
                                margin-bottom 0.2rem
                                font-weight 700
                                color #333
                                font-size 0.3rem

                        .bottom
                                font-size 0.24rem
                                color #666

                                & > *
                                        margin-right 0.1rem

                .right
                        width 1rem
                        background url("./img/nextBtn.png")
                        background-position center
                        background-size 0.7rem
                        background-repeat no-repeat
        .btn-box
                padding 0.3rem
                display block
                .btn
                        width 100%
                        height 1rem
                        background linear-gradient(#6f94e8,#5178df)
                        border-radius 0.1rem
                        text-align center
                        line-height 1rem
                        font-weight 700
                        color #fff
                        font-size 0.3rem
