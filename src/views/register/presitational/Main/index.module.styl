.subContent
        padding 0.3rem
        height 100%
        .input-box
                input
                        outline none
                        padding 0 0.2rem
                        height 1rem
                        flex-grow 1
                        border-radius 0.15rem
                        font-size 0.3rem
                        border .01rem solid rgba(0,0,0,.2)
                input::-webkit-input-placeholder
                        font-size 0.3rem
                        color rgba(100,100,100,0.5)
                .floor
                        display flex
                        margin-bottom 0.2rem
                        .get-msg-code
                                width 2.5rem
                                margin-left 0.2rem
                                flex-shrink 0
                                text-align center
                                line-height 1rem
                                color rgba(0,0,0,0.8)
                                font-size 0.3rem
                                background #fff
                                border-radius 0.15rem
                        .de-active
                                color rgba(100,100,100,0.5)

        .agreement
                .autoLogin
                        margin 0.3rem 0
                        display flex
                        font-size 0.26rem
                        color rgb(153,153,153)
                        justify-content center
                        span:first-child
                                height 0.35rem
                                width 0.35rem
                                display flex
                                border 0.02rem solid rgba(0, 0, 0, 0.2)
                                border-radius 100%
                                justify-content center
                                align-items center
                                margin-right 0.2rem
                                img
                                        width 100%
                                        content url("../img/icon_check.png")

        .register-btn
                width 100%
                height 1rem
                background linear-gradient(#6f94e8,#5178df)
                opacity 0.6
                border-radius 0.1rem
                text-align center
                line-height 1rem
                font-weight 700
                color #fff
                font-size 0.3rem
        .active
                opacity 1
        .loginBtn
                margin-top 0.5rem
                text-align center
                color rgb(153,153,153)