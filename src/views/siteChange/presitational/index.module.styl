.subContent
        padding 0.3rem 0.3rem 0
        background rgb(226, 226, 226)

        .inputBox
                border-radius 0.15rem
                border 0.01rem solid rgba(0, 0, 0, 0.1)
                display flex
                flex-direction column
                overflow hidden
                margin-bottom 0.2rem

                input
                        border 0
                        padding 0.3rem
                        font-size 0.26rem
                        outline none
                input:

                :-webkit-input-placeholder
                        color rgba(127, 127, 127, .8)

        .siteBox
                border-radius 0.15rem
                margin-bottom 0.2rem
                overflow hidden
                div
                        border-bottom 0.01rem solid rgba(100,100,100,0.1rem)
                        select
                                border 0
                                background #fff
                                height 1rem
                                outline none
                                width 100%
                                padding  0.2rem
                                font-size 0.3rem

        .default
                display flex
                padding 0.2rem
                color #686868
                font-size 0.26rem

                span:first-child
                        height 0.35rem
                        width 0.35rem
                        display flex
                        border 0.02rem solid rgba(0, 0, 0, 0.2)
                        border-radius 100%
                        justify-content center
                        align-items center
                        margin-right 0.2rem

                        img
                                width 100%

        .saveBtn
                width 100%
                height 1rem
                background linear-gradient(#6f94e8,#5178df)
                border-radius 0.1rem
                text-align center
                line-height 1rem
                font-weight 700
                color #fff
                font-size 0.3rem
